{
  "name": "wildcards-bot",
  "productName": "Wildcards Bot",
  "version": "0.7.2",
  "description": "Management Bot",
  "main": "src/electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on tcp:3000 && electron .\"",
    "build": "vite build",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.wildcards.admin",
    "win": {
      "target": "nsis",
      "icon": "src/media/WLCD.ico"
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "src/media",
        "to": "media",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "build/**/*",
      "src/electron/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "discord.js": "^14.16.3",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.3",
    "vite": "^7.2.4",
    "wait-on": "^8.0.1"
  }
}
